{{>layout/header}}

<div id="wrapper">
    <header id="header" class="alt">
        <h1>우주라이크</h1>
        <p>{{name}} 님, 환영합니다.</p>
        <ul class="actions fit">
            <li><a class="button" onclick="history.go(-1)">뒤로 돌아가기</a></li>
            <li><a href="/logout" class="button" >로그아웃</a></li>
        </ul>
    </header>

    <div id="main">
        <section id="content" class="main">
            <h2>{{name}} 님의 주량 추가하기</h2>
<!-- form -->
            <form>
                <div class="row gtr-uniform">
                    <div class="col-12">
                        <label for="drinkDate">술을 마신 날짜를 입력하세요.</label>
                        <input class="form-control" type="text" name="drinkDate" id="drinkDate" placeholder="형식 : yyyy-DD-mm" required/>
                    </div>
                    <div class="col-12">
                        <label for="drinkType">마신 술의 종류를 고르세요.</label>
                        <select class="form-control" name="drinkType" id="drinkType">
                            {{#itemList}}
                            <option value="{{id}}">{{itemName}}</option>
                            {{/itemList}}
                        </select>
                    </div>
                    <div class="col-12  col-12-xsmall">
                        <label for="cup">몇 잔 마셨나요?</label>
                        <input class="form-control" type="text" name="cup" id="cup" value="" placeholder="숫자로만 입력해주세요." required/>
                    </div>
                    <div class="col-12 col-12-xsmall">
                        <label for="film">필름이 끊겼나요?</label>
                        <select class="form-control" name="film" id="film">
                            <option value="N">아니오, 필름 끊기지 않았습니다.</option>
                            <option value="Y">네, 필름 끊겼습니다.</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label for="memo">특이사항 적기</label>
                        <textarea class="form-control" name="memo" id="memo" rows="3"></textarea>
                    </div>
                    <div class="col-12">
                        <ul class="actions">
                            <li><input type="button" value="주량 추가하기" class="primary" id="btn-event-save"/></li>
                            <li><input type="reset" value="입력내용 초기화" /></li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>

    <footer id="footer">
        <section>
            <h2>우주라이크</h2>
        </section>
        <section>
            <h2>팀 B511</h2>
            <dl class="alt">
                <dt>Email1</dt>
                <dd><a href="#">click_syk@naver.com</a></dd>
                <dt>Email2</dt>
                <dd><a href="#">tlswlgh120@naver.com</a></dd>
            </dl>
        </section>
    </footer>
</div>

<script>
    document.getElementById('drinkdate').value = new Date().toISOString().substring(0, 10);
    document.getElementById('drinkdate').max = new Date().toISOString().substring(0, 10);
</script>

